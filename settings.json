{
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Args": [
        "--max-line-length",
        "100",
        "--aggressive"
    ],
    "editor.formatOnSave": true,
    "python.linting.pylintArgs": [
        "--disable=C0111"
    ],
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true
    }
}
